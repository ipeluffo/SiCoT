<div class="container-fluid">

    <div class="row">
        <div class="col-md-12">

        	<div class="panel-group" role="tablist" aria-multiselectable="true">
				<div class="panel panel-default">
					<div class="panel-heading" role="tab" id="headingOne">
						<h4 class="panel-title">
							<a data-toggle="collapse" href="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
				  				Public Stream API parameters
							</a>
						</h4>
					</div>
					<div id="collapseOne" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
						<div class="panel-body">
							<form role="form">
								<div class="form-group">
									<label>Track</label>
									<input type="text" class="form-control" id="streamTrack" placeholder="phrase1, phrase2, ..., phrase400">
									<p class="help-block">400 phrases max limit!</p>
								</div>

								<div class="form-group">
									<label>Follow</label>
									<input type="text" class="form-control" id="streamTrack" placeholder="user1, user2, ...">
								</div>

								<div class="form-group">
									<label>Locations</label>
									<input type="text" class="form-control" id="streamTrack" placeholder="bound1, bound2, bound3, bound4">
									<p class="help-block"><a href="http://boundingbox.klokantech.com/" target="_blank">Find a location</a></p>
								</div>
							</form>
						</div>
						<div class="panel-footer"><a href="https://dev.twitter.com/streaming/reference/post/statuses/filter" target="_blank">Twitter Parameters documentation</a></div>
					</div>
				</div>
			
				<div class="panel panel-default">
				    <div class="panel-heading" role="tab" id="headingStreamStopCondition">
				    	<h4 class="panel-title">
				    		<a class="collapsed" data-toggle="collapse" href="#collapseStreamStopCondition" aria-expanded="false" aria-controls="collapseStreamStopCondition">
				    			Stream stop condition
				    		</a>
				    	</h4>
			    	</div>
			    	<div id="collapseStreamStopCondition" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingStreamStopCondition">
						<div class="panel-body">
							<div class="radio">
								<label>
									<input type="radio" name="optionsRadios" id="optionsRadios1" value="noneCondition" checked>
									None
								</label>
							</div>
							<div class="radio">
								<label>
									<input type="radio" name="optionsRadios" id="optionsRadios1" value="timeCondition">
									Time
									<input type="number" class="form-control" placeholder="In seconds!">
								</label>
							</div>
							<div class="radio">
								<label>
									<input type="radio" name="optionsRadios" id="optionsRadios2" value="option2">
									Tweets amount limit
									<input type="number" class="form-control">
								</label>
							</div>
						</div>
					</div>
				</div>

				<div class="panel panel-default">
					<div class="panel-heading" role="tab" id="headingMiscOptions">
						<h4 class="panel-title">
							<a class="collapsed" data-toggle="collapse" href="#collapseMiscOptions" aria-expanded="false" aria-controls="collapseMiscOptions">
								Misc options
							</a>
						</h4>
					</div>
					<div id="collapseMiscOptions" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingMiscOptions">
						<div class="panel-body">
						   <div class="checkbox">
								<label>
									<input type="checkbox" checked="checked"> Show Tweets
								</label>
							</div>

							<div class="checkbox">
								<label>
									<input type="checkbox"> Discard Retweets
								</label>
							</div>
						</div>
					</div>
				</div>
			</div>

        </div>
    </div>

    <div class="row">
      	<div class="col-md-4">
			<div class="panel panel-default">
				<div class="panel-heading">Info</div>
				<div class="panel-body">
					<ul>
						<li><b>Stream start time: </b><span></span></li>
						<li><b>Tweets fetched: </b><span></span></li>
					</ul>
				</div>
				<div class="panel-footer">
					<button class="btn btn-success">Start Stream</button>
					<button class="btn btn-danger">Stop Stream</button>
				</div>
			</div>
      	</div>
    </div>

    <div class="row">
		<div class="col-md-12">
			<table id="tweetsTable" class="table table-bordered table-hover table-condensed">
				<thead>
					<tr>
						<th>User</th>
						<th>Tweet</th>
						<th>Date</th>
						<th>URL</th>
					</tr>
				</thead>
				<tbody>
				</tbody>
			</table>
		</div>
    </div>

</div>
