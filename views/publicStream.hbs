<div class="container-fluid">
  <div role="tabpanel">
  	<ul class="nav nav-tabs nav-justified" role="tablist" style="margin-bottom:15px;">
  		<li role="presentation" class="active"><a href="#streamTweets" role="tab" data-toggle="tab">Stream & Tweets</a></li>
		<li role="presentation"><a href="#streamParameters" role="tab" data-toggle="tab">Parameters</a></li>
	</ul>

	<div class="tab-content">
		<div role="tabpanel" class="tab-pane active" id="streamTweets">

        <div class="row">

          <div class="col-md-4">
  					<div class="panel panel-default">
  						<div class="panel-heading">Stream stop condition</div>
  						<div class="panel-body">
  							<div class="radio">
  								<label>
  									<input type="radio" name="optionsRadios" id="optionsRadios1" value="noneCondition" checked>
  									None
  								</label>
  							</div>
  							<div class="radio">
  								<label>
  									<input type="radio" name="optionsRadios" id="optionsRadios1" value="timeCondition">
  									Time
  									<input type="number" class="form-control" placeholder="In seconds!">
  								</label>
  							</div>
  							<div class="radio">
  								<label>
  									<input type="radio" name="optionsRadios" id="optionsRadios2" value="option2">
  									Tweets amount limit
  									<input type="number" class="form-control">
  								</label>
  							</div>
  						</div>
  					</div>
          </div>

          <div class="col-md-4">
  					<div class="panel panel-default">
  						<div class="panel-heading">Misc options</div>
  						<div class="panel-body">
  							<div class="checkbox">
  								<label>
  									<input type="checkbox"> Show Tweets
  								</label>
  							</div>
  						</div>
  					</div>
          </div>

          <div class="col-md-4">
  					<div class="panel panel-default">
  						<div class="panel-heading">Info</div>
  						<div class="panel-body">
  							<ul>
  								<li><b>Stream start time: </b><span></span></li>
  								<li><b>Tweets fetched: </b><span></span></li>
  							</ul>
  						</div>
  					</div>
          </div>

        </div>

        <div class="row">
          <div class="col-md-12">
  					<button class="btn btn-success">Start Stream</button>
  					<button class="btn btn-danger">Stop Stream</button>
          </div>
        </div>

        <div class="row">
          <div class="col-md-12">
  					<table>

  					</table>
          </div>
        </div>

		</div>

		<div role="tabpanel" class="tab-pane" id="streamParameters">
			<div class="panel panel-default">
				<div class="panel-heading">Public Stream API parameters</div>
				<div class="panel-body">
					<form role="form">
						<div class="form-group">
							<label>Track</label>
							<input type="text" class="form-control" id="streamTrack" placeholder="phrase1, phrase2, ..., phrase400">
							<p class="help-block">400 phrases max limit!</p>
						</div>

						<div class="form-group">
							<label>Follow</label>
							<input type="text" class="form-control" id="streamTrack" placeholder="user1, user2, ...">
						</div>

						<div class="form-group">
							<label>Locations</label>
							<input type="text" class="form-control" id="streamTrack" placeholder="bound1, bound2, bound3, bound4">
							<p class="help-block"><a href="http://boundingbox.klokantech.com/" target="_blank">Find a location</a></p>
						</div>

						<button type="submit" class="btn btn-default">Submit</button>
					</form>
				</div>
				<div class="panel-footer"><a href="https://dev.twitter.com/streaming/reference/post/statuses/filter" target="_blank">Twitter Parameters documentation</a></div>
			</div>
		</div>

	</div>
  </div>
</div>

