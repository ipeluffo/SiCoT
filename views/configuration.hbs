<div class="container">

	<div class="row">
        <div class="col-md-3"></div>

        <div class="col-md-6">
            <form>
                <h3>MongoDB</h3>
                <div class="form-group">
                    <label for="mongoDbAddress">MongoDB Address</label>
                    <input type="text" class="form-control" id="mongoDbAddress" placeholder="IP Address">
                </div>

                <div class="form-group">
                    <label for="mongoDbPort">MongoDB Port</label>
                    <input type="number" class="form-control" id="mongoDbPort" placeholder="Port Number">
                </div>

                <div class="form-group">
                    <label for="mongoDbUser">MongoDB User</label>
                    <input type="text" class="form-control" id="mongoDbUser" placeholder="User">
                </div>

                <div class="form-group">
                    <label for="mongoDbPassword">MongoDB Password</label>
                    <input type="password" class="form-control" id="mongoDbPassword" placeholder="Password">
                </div>

                <div class="form-group">
                    <label for="mongoDbDatabase">MongoDB Database Name</label>
                    <input type="text" class="form-control" id="mongoDbDatabase" placeholder="Database">
                </div>
                
                <h3>Twitter Credentials</h3>
                <div class="form-group">
                    <label for="twitterConsumerKey">Consumer Key</label>
                    <input type="text" class="form-control" id="twitterConsumerKey">
                </div>

                <div class="form-group">
                    <label for="twitterConsumerSecret">Consumer Secret</label>
                    <input type="text" class="form-control" id="twitterConsumerSecret">
                </div>

                <div class="form-group">
                    <label for="twitterTokenKey">Token Key</label>
                    <input type="text" class="form-control" id="twitterTokenKey">
                </div>

                <div class="form-group">
                    <label for="twitterTokenSecret">Token Secret</label>
                    <input type="password" class="form-control" id="twitterTokenSecret">
                </div>
            
                <button type="submit" class="btn btn-default">Submit</button>
            </form>
        </div>

        <div class="col-md-3"></div>

	</div>

</div>